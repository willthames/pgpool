#!/bin/bash

ME=$(basename $0)
usage()
{
cat << EOF
$ME - This script prints the postgres node id for an IP.

Usage: $ME [-d] IP timeout hostname port# username password
Usage: $ME -h

EOF
}

while getopts â€œhâ€ OPTION
do
     case $OPTION in
         h)
             usage
             exit 1
             ;;
         ?)
             usage
             exit
             ;;
     esac
done

if [ $# -lt 5 ]; then
	usage;
	exit 1;
fi

IP=$1
shift
NUMNODES=`pcp_node_count $@`;
MAXNODE=$(($NUMNODES - 1));

for i in `seq 0 $MAXNODE`; do
	TEXT=`pcp_node_info $@ $i`;
	if [[ "$TEXT" =~ "$IP" ]]; then
		echo "$i";
		exit;
	fi
done;

